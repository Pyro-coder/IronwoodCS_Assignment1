{
  "name": "Python 3 Class",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",        // Includes the Debugger (debugpy)
        "ms-python.vscode-pylance", // Intellisense
        "-GitHub.copilot-chat"      // Uninstall Chat
      ],
      "settings": {
        // --- 1. Visual Hiding ---
        "files.exclude": {
            // Hides the config folder so students don't mess with settings
            "**/.devcontainer": true,
            // Hides git internals
            "**/.git": true
        },

        // --- 2. Auto-Grader Configuration ---
        "python.testing.unittestArgs": ["-v", "-s", ".", "-p", "*tests*.py"],
        "python.testing.pytestEnabled": false,
        "python.testing.unittestEnabled": true,

        // --- 3. Anti-AI Settings ---
        "chat.disableAIFeatures": true,
        "workbench.secondarySideBar.defaultVisibility": "hidden",
        "github.copilot.enable": { "*": false, "python": false },
        "github.copilot.editor.enableAutoCompletions": false
      }
    }
  }
}
