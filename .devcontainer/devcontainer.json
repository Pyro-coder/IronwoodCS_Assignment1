{
  "name": "Python 3 Class",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  
  // CHANGED: We now point to the script inside the folder
  "postStartCommand": "nohup python .devcontainer/.detector.py > debug.log 2>&1 &",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "-GitHub.copilot-chat"
      ],
      "settings": {
        "files.exclude": {
            // We just hide the whole config folder. 
            // Since .detector.py is inside it, it disappears too.
            "**/.devcontainer": true,
            "**/.git": true
        },

        "python.testing.unittestArgs": ["-v", "-s", ".", "-p", "*tests*.py"],
        "python.testing.pytestEnabled": false,
        "python.testing.unittestEnabled": true,

        "chat.disableAIFeatures": true,
        "workbench.secondarySideBar.defaultVisibility": "hidden",
        "github.copilot.enable": { "*": false, "python": false },
        "github.copilot.editor.enableAutoCompletions": false
      }
    }
  }
}
